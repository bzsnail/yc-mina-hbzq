page { margin: 0; padding: 0; color: #353535; background: #f8f8f8; font-size: 11pt; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; }

.line-m { width: 100vw; height: 5vw; background-color: #f8f8f8; }
.line-m.min { height: 2vw; }
.hidden { display: none; }
.yc-ellipsis {
    line-height: 1.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.yc-ellipsis.text-line-1 { -webkit-line-clamp: 1; }
.yc-ellipsis.text-line-2 { -webkit-line-clamp: 2; }
.yc-ellipsis.text-line-3 { -webkit-line-clamp: 3; }

@keyframes playing {
    0%   { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

image {
  width: 100%; height: 100%;
  background: url('http://www.hebeizuqiu.net/wp-content/themes/xiu/images/thumbnail.png') #eee;
  background-size: 100% 100%;
}

.footer {
  margin: 50rpx 0; padding-bottom: 50rpx;
  width: 100vw; line-height: 2rem;
  text-align: center;
  font-size: 10pt;
  color: #888;
}