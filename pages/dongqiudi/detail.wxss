.page {
  padding-bottom: 100rpx;
  width: 100vw; min-height: 100vh;
}
.title {
  padding: 25rpx;
  font-size: 14pt;
  font-weight: 450;
}
.time {
  padding: 0 25rpx;
  color: #888;
}
.copyright {
  padding: 25rpx;
  color: #b2b2b2;
  font-size: 10pt;
  word-break: break-all;
}
.tags {
  padding: 25rpx;
}
.tags view {
  margin: 0 25rpx 10rpx 0; padding: 6rpx 15rpx;
  display: inline-block;
  font-size: 9pt;
  color: #888;
  background: #eee;
}
.rich-text {
  width: 700rpx; min-height: 700rpx;
  padding: 25rpx;
  font-size: 12pt;
}
.rich-text view {
  margin: 25rpx 0;
  line-height: 2rem;
  text-indent: 2em;
}
.rich-text view.H2 {
  padding-left: 10px;
  line-height: 1rem;
  font-weight: bold;
  text-indent: 0;
  border-left: 3px solid #16b13a;
}
.rich-text image {
  min-height: 300rpx;
}
.rich-text video {
  width: 100%;
}
